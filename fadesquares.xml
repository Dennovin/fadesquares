<?xml version="1.0" encoding="utf-8"?>

<screensaver name="fadesquares" _label="FadeSquares">

  <command arg="-root"/>

  <number id="delay" type="slider" arg="-delay %"
          _label="Frame rate" _low-label="Low" _high-label="High"
          low="0" high="100000" default="25000"
          convert="invert"/>

  <number id="num-squares" type="slider" arg="-num-squares %"
          _label="Number of Squares" _low-label="Low" _high-label="High"
          low="1" high="1000" default="36"/>

  <number id="subdivision" type="spinbutton" arg="-subdivision %"
          _label="Squares (Vertical)"
          low="1" high="64" default="9"/>
  <_description>
Squares fading in and out, rotating through colors.
  </_description>
</screensaver>
